<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="@dimen/login_edittext_width"
            android:layout_height="@dimen/login_edittext_height"
            android:layout_marginTop="10dp"
            android:paddingLeft="2dp"
            android:hint="user name"
            android:background="@drawable/selector_edittext_bg"
            android:textSize="@dimen/login_edittext_text_size"
            android:textColor="@color/longin_edit_text_color"
            android:drawableLeft="@drawable/ic_edit_user"/>

        <EditText
            android:id="@+id/et_user_password"
            android:layout_width="@dimen/login_edittext_width"
            android:layout_height="@dimen/login_edittext_height"
            android:layout_marginTop="10dp"
            android:paddingLeft="2dp"
            android:hint="password"
            android:password="true"
            android:background="@drawable/selector_edittext_bg"
            android:textSize="@dimen/login_edittext_text_size"
            android:textColor="@color/longin_edit_text_color"
            android:drawableLeft="@drawable/ic_edit_pass" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/login_edittext_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/login_btn_text"
            android:textColor="@color/longin_btn_text_color"
            android:textSize="@dimen/login_btn_text_size"
            android:background="@drawable/selector_btn_login" />

        <TextView
            android:id="@+id/tv_register_acount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/login_no_acount_text"
            android:textSize="@dimen/login_no_acount_text_size"
            android:textColor="@color/longin_no_acount_text_color" />
        
        <TextView
            android:id="@+id/tv_error_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textSize="@dimen/login_no_acount_text_size"
            android:textColor="@color/red" />
    </LinearLayout>

</LinearLayout>