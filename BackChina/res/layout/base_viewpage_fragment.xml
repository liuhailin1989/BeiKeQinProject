<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <!-- 导航标题栏 -->
    <ImageView
        android:id="@+id/iv_btn_add_tab"
        android:layout_width="@dimen/space_49"
        android:layout_height="@dimen/space_49"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:src="@drawable/selector_btn_add_tab"
        android:background="@color/background_color"/>
                
    <com.android.backchina.widget.PagerSlidingTabStrip
        android:id="@+id/pager_tabstrip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_49"
        android:background="@color/background_color"
        app:allowWidthFull="true"
        app:slidingBlock="@drawable/image_sliding_block"
        android:layout_toLeftOf="@id/iv_btn_add_tab">

    </com.android.backchina.widget.PagerSlidingTabStrip>
    
    <View
        android:id="@+id/view_pager_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/pager_tabstrip"
        android:background="@color/split_line_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        style="@style/fill_fill"
        android:layout_below="@id/view_pager_line" >
    </android.support.v4.view.ViewPager>

    <com.android.backchina.ui.empty.EmptyLayout
        android:id="@+id/error_layout"
        style="@style/fill_fill"
        android:visibility="gone" />

</RelativeLayout>